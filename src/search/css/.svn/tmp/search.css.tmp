/************************************************************************
    Search Assist Locations Default Autocomplete Plugin Styling
************************************************************************/
body .search-assist{
    font:                   16px "Helvetica Neue",Helvetica,Arial;
    color:                  #333;
    z-index:                501;
}

body .search-assist .yui3-aclist-item-active,
body .search-assist .yui3-aclist-item-hover{
    background:             #F1F1F1;
}

.location .labelled-location{
    font-size:              13px;
    color:                  #6C717A;
}

.location .info-text{
    font-size:              12px;
    color:                  #6C717A;
    font-weight:            normal;
}

.location span {
    font-weight:            bold;
    color:                  #444;
}

.location span b {
    color:                  #333;
    font-weight:            normal;
}

body .search-assist .search-assist-content{
    background:             #fff;
    border:                 1px solid #999;
    border:                 1px rgb(170,170,170) solid;
    border-top:             1px solid #ccc;
    -moz-box-shadow:        rgba(0, 0, 0, 0.1) 0px 1px 1px 0px, rgba(255, 255, 255, 0.8) 3px 6px 13px 0px; 
    -webkit-box-shadow:     rgba(0, 0, 0, 0.1) 0px 1px 1px 0px, rgba(255, 255, 255, 0.8) 3px 6px 13px 0px; 
    box-shadow:             rgba(0, 0, 0, 0.1) 0px 1px 1px 0px, rgba(255, 255, 255, 0.8) 3px 6px 13px 0px; 
}

.search-assist-content .search-assist-list{
    list-style:             none;
    margin:                 0;
    overflow:               hidden;
    padding:                0;
}

.search-assist-list .yui3-aclist-item{
    cursor:                 pointer;
    list-style:             none;
    padding:                0;
    position:               relative;
    width:                  100%;
}

.search-assist-list .location{
    padding:                2px 5px;
}

.search-assist-list .icon-spacing{
    padding-left:           32px;
}

.search-assist-list .location.current,
.search-assist-list .location.default{
    padding:                8px 5px 8px 32px;
    border-bottom:          1px solid #bcbcbc;
}

.search-assist-list .location.current span,
.search-assist-list .location.default span,
.search-assist-list .location.saved span,
.no-location .link-text{
    font-weight:            normal;
}

.search-assist-list li:first-child .location{
    padding-top:            5px;
}

.search-assist-list li:last-child .location{
    padding-bottom:         5px;
}

.search-assist-list .current-icon{
    background:             url('../../app/img/myc.png') no-repeat 0 -40px;
    width:                  16px;
    height:                 16px;
    top:                    8px;
    left:                   8px;
    position:               absolute;
}

.search-assist-list .default-icon{
    background:             url('../../app/img/myc.png') no-repeat 0 -866px;
    width:                  16px;
    height:                 14px;
    top:                    9px;
    left:                   8px;
    position:               absolute;
}

button.assist-dd{
    background-image:       url('../../app/img/myc.png');
    background-position:    4px -96px;
    display:                block;
    height:                 16px;
    position:               absolute;
    width:                  16px;
    cursor:                 pointer;
    right:                  1%;
    top:                    24%;
}

button.assist-dd.querying{
    background-image:       url('../../app/img/querying.gif');
    background-position:    center center;
}

/**** Override for the No Default Location Selected text ****/

.no-location .link-text{
    color:                  #444 !important;
}

/**** Overrides for the directions form ****/

.directions-search-assist.search-assist{
    font-size:              13px;
}

.directions-search-assist.search-assist .labelled-location{
    font-size:              12px;
}

.directions-search-assist.search-assist .info-text{
    font-size:              11px;
}

.directions-search-assist.search-assist .current-icon{
    top:                    6px;
}

.directions-search-assist.search-assist .default-icon{
    top:                    7px;
}

.directions-search-assist.search-assist button.assist-dd{
    background-position:    4px -100px;
}

.directions-search-assist.search-assist button.assist-dd.querying{
    background-image:       url('../../app/img/querying.gif');
    background-position:    center center;
}

/************************************************************************
    Manage Locations Link Styling
************************************************************************/

.hide-manage-link .manage{
    display:                none;
}

.search-assist-content .manage{
    padding:                8px 5px 8px 32px;
    border:                 1px solid #999;
    border:                 1px rgb(170,170,170) solid;
    border-top:             1px solid #ccc;
    position:               relative;
}

.search-assist-content .manage a{
    color:                  #444 !important;
}

.search-assist-content .manage:hover{
    background:             #F1F1F1;
}

.search-assist-content .manage-icon{
    background:             url('../../app/img/myc.png') no-repeat 0 -899px;
    width:                  16px;
    height:                 16px;
    top:                    9px;
    left:                   9px;
    position:               absolute;
}

.directions-search-assist.search-assist .search-assist-content .manage-icon{
    top: 7px;
}

/* YUI CSS Detection Stamp */
#yui3-css-stamp.myc-search-css { display: none; }