/* FIX FIREFOX EXTRA PADDING FOR BUTTON */
input[type="button"]::-moz-focus-inner, 
button::-moz-focus-inner {
    border:             0;
    padding:            0;
}
/************************************************************************
    Button Container
************************************************************************/
button,
input[type="button"],
input[type="submit"]
.button-container{
    overflow:           visible; /* ADDED FOR IE7 padding issue */
    color:              #1D1DA3;
}

button.regular,
input[type="button"].regular,
input[type="submit"].regular,
.myc-button-container {
    color:              #1D1DA3;
    text-shadow:        1px 1px 0px rgba(255,255,255,0.8);
    border:             1px solid #a4a4a3;
    background:         #f5f7f9; /* Old browsers */
    background:         -moz-linear-gradient(top, #ffffff 30%, #f5f7f9 100%); /* FF3.6+ */
    background:         -webkit-gradient(linear, left top, left bottom, color-stop(30%, #ffffff), color-stop(100%, #f5f7f9)); /* Chrome,Safari4+ */
    background:         -webkit-linear-gradient(top, #ffffff 30%, #f5f7f9 100%); /* Chrome10+,Safari5.1+ */
    background:         -o-linear-gradient(top, #ffffff 30%, #f5f7f9 100%); /* Opera11.10+ */
    background:         -ms-linear-gradient(top, #ffffff 30%, #f5f7f9 100%); /* IE10+ */
    filter:             progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f5f7f9', GradientType=0 ); /* IE6-9 */
    background:         linear-gradient(top, #ffffff 30%, #f5f7f9 100%); /* W3C */
    padding:            10px 15px 10px 15px;
    font-weight:        bold;
    cursor:             pointer;
}

button.regular:hover,
input[type="button"].regular:hover,
input[type="submit"].regular:hover,
.myc-button-container:hover {
    background:         rgba(240,240,240,1);
    -moz-box-shadow:    0px 0px 2px rgba(0,0,0,0.4);
    -webkit-box-shadow: 0px 0px 2px rgba(0,0,0,0.4);
    box-shadow:         0px 0px 2px rgba(0,0,0,0.4);
}

button.regular:active,
button.regular:focus,
input[type="submit"].regular:active,
input[type="submit"].regular:focus,
input[type="button"].regular:active,
input[type="button"].regular:focus,
.myc-button-container:active,
.myc-button-container:focus{
    background:         #f5f7f9; /* Old browsers */
    background:         -moz-linear-gradient(top, #f5f7f9 0%, #ffffff 100%); /* FF3.6+ */
    background:         -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f5f7f9), color-stop(100%, #ffffff)); /* Chrome,Safari4+ */
    background:         -webkit-linear-gradient(top, #f5f7f9 0%, #ffffff 100%); /* Chrome10+,Safari5.1+ */
    background:         -o-linear-gradient(top, #f5f7f9 0%, #ffffff 100%); /* Opera11.10+ */
    background:         -ms-linear-gradient(top, #f5f7f9 0%, #ffffff 100%); /* IE10+ */
    filter:             progid:DXImageTransform.Microsoft.gradient( startColorstr='#f5f7f9', endColorstr='#ffffff', GradientType=0 ); /* IE6-9 */
    background:         linear-gradient(top, #f5f7f9 0%, #ffffff 100%); /* W3C */
}

button.blue,
input[type="button"].blue,
input[type="submit"].blue{
    color:              #FFFFFF;
    border:             1px solid #324FE1;
    background:         #5771FF;
    padding:            6px 12px;
    cursor:             pointer;
    border-radius:      2px;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
}
button.blue:hover,
input[type="button"].blue:hover,
input[type="submit"].blue:hover {
    border:             1px solid #1D1DA3;
    background:         #4255B5;
}
button.blue:active,
button.blue:focus,
input[type="button"].blue:active,
input[type="button"].blue:focus,
input[type="submit"].blue:active,
input[type="submit"].blue:focus {
    border:             1px solid #1D1DA3;
    background:         #4255B5;
}

input[type=submit].image,
input[type=button].image,
button.image {
    line-height:            999px; /* Set it higher than your image height */
    overflow:               hidden; /* Hide the text */
    font-size:              0;
    border:                 none;
    cursor:                 pointer;
    background:             transparent;
}

button .hide-text{
    line-height:        999px; /* Set it higher than your image height */
    overflow:           hidden; /* Hide the text */
    font-size:          0;
}

button.noborder,
input[type=button].noborder{
    border:                 none;
    background:             none;
    text-decoration:        none;
    color:                  #1D1DA3;
    cursor:                 pointer;
}

input[type=button].noborder:hover,
button.noborder:hover{
    text-decoration:        underline;
}

button.noborder:active,
button.noborder:focus,
input[type=button].noborder:active,
input[type=button].noborder:focus{
    text-decoration:        underline;
}

button.disabled,
button:disabled,
input[type=button]:disabled,
input[type=button].disabled {
    color:                  rgba(0,0,0,0.4);
    text-shadow:            1px 1px 0px rgba(255,255,255,0.5);
    background:             rgba(220,220,220,1);
    cursor:                 default;
    text-decoration:        none !important;
}

input[type=button].close.image,
button.close.image {
    position:               absolute;
    background:             url('../../app/img/myc.png') no-repeat 0 -143px;
    width:                  9px;
    height:                 9px;
}

input[type=button].shadow,
button.shadow {
    -moz-box-shadow:    1px 1px 3px rgba(0, 0, 0, 0.2);
    -webkit-box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    box-shadow:         1px 1px 3px rgba(0, 0, 0, 0.2);
}

/************************************************************************
    End of Button Container
************************************************************************/

/* YUI CSS Detection Stamp */
#yui3-css-stamp.myc-app-button-css { display: none; }