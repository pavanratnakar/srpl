/************************************************************************
    Loader
************************************************************************/

.loader {
    border:                 1px solid #CCCCCC;
    left:                   48.2%;
    padding:                2px;
    position:               absolute;
    top:                    54.3%;
    border-radius:          5px;
    z-index:                11000;
    -webkit-border-radius:  5px;
    -moz-border-radius:     5px;
    -khtml-border-radius:   5px;
}

.loader.big{
    background:             #fff url("../img/spinner.gif") no-repeat center center;
    background-color:       #fff:
    background-color:       rgba(255, 255, 255, .95);
    width:                  40px;
    height:                 40px;
}

/************************************************************************
    End of Loader
************************************************************************/

/************************************************************************
    No js
************************************************************************/
#no-js{
    display:            none;
}
html.no-js #no-js{
    background:         none repeat scroll 0 0 #FFFFFF;
    border:             1px solid #CCCCCC;
    border-radius:      2px;
    -moz-box-shadow:    0 1px 6px #929292;
    -webkit-box-shadow: 0 1px 6px #929292;
    box-shadow:         0 1px 6px #929292;
    left:               50%;
    margin-left:        -160px;
    padding:            20px;
    position:           absolute;
    top:                47%;
    width:              300px;
    display:            block !important;
}

html.no-js #no-js p {
    background:         url("http://l.yimg.com/zz/combo?st/sprite_2012_04_17.png") no-repeat scroll 0 -3995px transparent;
    color:              #333333;
    padding-left:       30px;
}
html.no-js .loader{
    display:            none !important;
}
/************************************************************************
    End of no js
************************************************************************/

