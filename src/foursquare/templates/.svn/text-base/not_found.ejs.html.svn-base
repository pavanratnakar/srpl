<% 
	q = sanitize(q);

	var heading = 'There are no results for <b>' + q + '</b>';
	var searchTerm = q;
	if (n) {
		n = sanitize(n);
		heading += ' near <b>' + n + '</b>';
		searchTerm += ' near ' + n;
	} else {
		heading += ' within the current map view';
	}
%>
<div class="not-found">
	<button title="Hide" type="button" class="image close sidebar-close"></button>
	<h4><%= heading %></h4>
	<h5>Try one of the suggestions below:</h5>
	<ul>
		<li>
			Check your spelling
		</li>
		<li>
			Try more general words
		</li>
		<li>
			Try zooming in or out on the map
		</li>
		<li>
			Try different words that mean the same thing
		</li>
		<li>
			Search the web for &#8220;<a target="_blank" href='http://search.yahoo.com/search?p=<%= searchTerm %>' title='<%= searchTerm %>'><%= searchTerm %></a>&#8221;
		</li>
	</ul>
</div>